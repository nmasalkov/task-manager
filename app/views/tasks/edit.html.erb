<div class="container">
  <div class="row">
    <div class="col-md-12 text-center display-4 pb-5">
      Edit task <span class="text-success"> <%= task.title %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: task do |form| %>
        <div class="form-group">
          <%= form.label :title, class: 'control-label' %>
          <%= form.text_field :title, class:'form-control', required: true, value: task.title  %>
        </div>
        <div class="form-group">
          <%= form.label :description, class: 'control-label' %>
          <%= form.text_area :description, class:'form-control', value: task.description %>
        </div>
        <div class="form-group">
          <%= form.label :users, class: 'control-label' %>
          <%= form.select :user_ids, @users.map{ |user| [user.username, user.id] }, {}, { class: 'form-control', multiple: true, size: @users.length } %>
        </div>
        <div class="form-group">
          <%= form.label :status, class: 'control-label' %>
          <%= form.select :status, @statuses.keys, {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :start_date, default: task.start_date, class: 'control-label' %>
          <%= form.datetime_select :start_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :end_date, class: 'control-label' %>
          <%= form.datetime_select :end_date, default: task.end_date, class: 'form-control' %>
        </div>
        <%= form.submit "Edit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
