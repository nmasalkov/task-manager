 <div class="row">
    <div class="col-md-12">
      <%= form_with model: task, local: true do |form| %>
        <% if task.new_record? || policy(task).creator? %>
          <div class="form-group">
            <%= form.label :title, class: 'control-label' %>
            <%= form.text_field :title, class:'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= form.label :description, class: 'control-label' %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :users, class: 'control-label' %>
            <% if task.new_record? %>
              <%= form.select :user_ids, users.map { |user| [user.username, user.id] }, {}, { class: 'form-control', multiple: true, size: users.length } %>
            <% else %>
              <%= form.select :user_ids, options_from_collection_for_select(users, :id, :username, assigned_users_ids), {}, { class: 'form-control', multiple: true, size: users.length } %>
            <% end %>
          </div>
          <div class="form-group">
            <%= form.label :start_date, class: 'control-label' %>
            <%= form.datetime_select :start_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :end_date, class: 'control-label' %>
            <%= form.datetime_select :end_date, class: 'form-control' %>
          </div>
      <% end %>
        <div class="form-group">
          <%= form.label :status, class: 'control-label' %>
          <%= form.select :status, statuses.keys, {}, class: 'form-control' %>
        </div>
        <% if task.new_record? %>
          <%= form.submit "Create", class: "btn btn-primary" %>
        <% else %>
          <%= form.submit "Edit", class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
